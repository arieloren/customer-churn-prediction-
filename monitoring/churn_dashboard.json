{
  "id": null,
  "title": "Churn-App Overview",
  "schemaVersion": 39,
  "version": 2,
  "panels": [
    {
      "type": "stat",
      "title": "Req /s  (1 m avg)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(api_requests_total{endpoint=\"/predict\"}[1m]))" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Error rate (5 m)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(api_requests_total{endpoint=\"/predict\",http_status!~\"2..\"}[5m])) / sum(rate(api_requests_total{endpoint=\"/predict\"}[5m]))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },

    {
      "type": "timeseries",
      "title": "Latency p95 (s)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_predict_seconds_bucket{endpoint=\"/predict\"}[5m])) by (le))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },

    {
      "type": "stat",
      "title": "Rows written (last run)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "batch_rows_written" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 12 }
    },

    {
      "type": "stat",
      "title": "Batch duration (s)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "batch_job_seconds_sum" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 12 }
    }
  ]
}
